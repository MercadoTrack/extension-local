{
  "author": "Guillermo Maiolo",
  "manifest_version": 3,
  "name": "MercadoTrack (Local)",
  "description": "MercadoTrack de uso exclusivamente local, trackea los datos localmente en tu computadora.",
  "version": "0.7.0",
  "permissions": ["storage", "unlimitedStorage"],
  "icons": {
    "128": "images/icon_128.png"
  },
  "action": {
    "default_title": "MercadoTrack",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "scripts/background.bundle.js"
  },
  "host_permissions": [
    "*://*.mercadolibre.com.ar/*",
    "*://*.mercadolibre.com.ve/*",
    "*://*.mercadolibre.com.bo/*",
    "*://*.mercadolibre.cl/*",
    "*://*.mercadolibre.com.co/*",
    "*://*.mercadolibre.co.cr/*",
    "*://*.mercadolibre.com.do/*",
    "*://*.mercadolibre.com.ec/*",
    "*://*.mercadolibre.com.gt/*",
    "*://*.mercadolibre.com.hn/*",
    "*://*.mercadolibre.com.mx/*",
    "*://*.mercadolibre.com.ni/*",
    "*://*.mercadolibre.com.pa/*",
    "*://*.mercadolibre.com.py/*",
    "*://*.mercadolibre.com.pe/*",
    "*://*.mercadolibre.com.sv/*",
    "*://*.mercadolibre.com.uy/*",
    "*://*.mercadolivre.com.br/*",
    "*://*.mercadolivre.pt/*"
  ],
  "content_scripts": [
    {
      "js": ["scripts/content.bundle.js"],
      "matches": [
        "*://*.mercadolibre.com.ar/*",
        "*://*.mercadolibre.com.ve/*",
        "*://*.mercadolibre.com.bo/*",
        "*://*.mercadolibre.cl/*",
        "*://*.mercadolibre.com.co/*",
        "*://*.mercadolibre.co.cr/*",
        "*://*.mercadolibre.com.do/*",
        "*://*.mercadolibre.com.ec/*",
        "*://*.mercadolibre.com.gt/*",
        "*://*.mercadolibre.com.hn/*",
        "*://*.mercadolibre.com.mx/*",
        "*://*.mercadolibre.com.ni/*",
        "*://*.mercadolibre.com.pa/*",
        "*://*.mercadolibre.com.py/*",
        "*://*.mercadolibre.com.pe/*",
        "*://*.mercadolibre.com.sv/*",
        "*://*.mercadolibre.com.uy/*",
        "*://*.mercadolivre.com.br/*",
        "*://*.mercadolivre.pt/*"
      ],
      "run_at": "document_end"
    }
  ]
}
